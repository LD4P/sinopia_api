{
  "name": "sinopia_api",
  "version": "0.1.0",
  "description": "API for persisting resources in the Sinopia framework.",
  "main": "server.js",
  "license": "Apache-2.0",
  "homepage": "https://github.com/LD4P/sinopia_api",
  "repository": "github:LD4P/sinopia_api",
  "scripts": {
    "dev-start": "nodemon src/server.js",
    "start": "node src/server.js",
    "eslint": "eslint --color -c .eslintrc.yml --ext js .",
    "eslint-fix": "eslint --color -c .eslintrc.yml --ext js --fix .",
    "test": "jest --colors --runInBand",
    "ci": "npm run eslint && npm run test"
  },
  "type": "module",
  "dependencies": {
    "@rdfjs/parser-jsonld": "^1.2.1",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-jwt": "^6.0.0",
    "helmet": "^4.0.0",
    "jwks-rsa": "^1.8.1",
    "lodash": "^4.17.20",
    "monk": "^7.3.1",
    "n3": "^1.6.1",
    "rdf-ext": "^1.3.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.11.0",
    "babel-jest": "^26.3.0",
    "eslint": "^7.7.0",
    "jest": "^26.4.0",
    "nodemon": "^2.0.4",
    "supertest": "^4.0.2"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "transform": {
      "^.+\\.[jt]sx?$": "babel-jest"
    }
  }
}
